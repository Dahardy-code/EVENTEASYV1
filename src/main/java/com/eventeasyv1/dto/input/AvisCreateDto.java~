package com.eventeasyv1.dto.input;

import jakarta.validation.constraints.Max;
import jakarta.validation.constraints.Min;
import jakarta.validation.constraints.NotBlank;
import jakarta.validation.constraints.NotNull;
import lombok.Data;

@Data
public class AvisCreateDto {
    @NotBlank(message = "Le commentaire ne peut pas être vide.")
    private String commentaire;

    @NotNull(message = "La note est obligatoire.")
    @Min(value = 1, message = "La note doit être au minimum 1.")
    @Max(value = 5, message = "La note doit être au maximum 5.")
    private Integer note;

    // serviceId sera généralement passé via l'URL (@PathVariable)
    // clientId sera récupéré depuis l'utilisateur connecté dans le service
}